---
import { projects } from "../../config/projects.json";
---

<section>
    <h2 class="font-bold text-5xl my-8 text-center">Projects</h2>
    {
        projects.map((project) => (
            <div class="flex-row md:flex">
                <div class="flex-1 text-center md:text-left">
                    <h2 class="font-bold text-2xl my-4">{project.title}</h2>
                    <p class="my-2 pl-20 pr-20">{project.description}</p>
                    <button class="bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded-xl">
                        More Info
                    </button>
                </div>
                <div class="flex-1">
                    <img src={project.image} class="w-72 m-auto p-9" alt="" />
                </div>
            </div>
        ))
    }
</section>
